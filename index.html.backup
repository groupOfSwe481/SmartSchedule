            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body p-0">
            <ul class="nav nav-tabs px-3 pt-3" id="notificationTabs" role="tablist">
              <li class="nav-item" role="presentation">
                <button 
                  class="nav-link active" 
                  id="notifications-tab" 
                  data-bs-toggle="tab" 
                  data-bs-target="#notifications-panel" 
                  type="button" 
                  role="tab">
                  <i class="bi bi-bell me-2"></i>Notifications
                </button>
              </li>
              <li class="nav-item" role="presentation">
                <button 
                  class="nav-link" 
                  id="deadlines-tab" 
                  data-bs-toggle="tab" 
                  data-bs-target="#deadlines-panel" 
                  type="button" 
                  role="tab">
                  <i class="bi bi-calendar-event me-2"></i>Deadlines
                </button>
              </li>
            </ul>

            <div class="tab-content" id="notificationTabContent">
              <div 
                class="tab-pane fade show active" 
                id="notifications-panel" 
                role="tabpanel">
                <div id="notificationsList" style="max-height: 500px; overflow-y: auto;">
                  <div class="text-center py-3">
                    <div class="spinner-border spinner-border-sm me-2"></div>
                    Loading notifications...
                  </div>
                </div>
              </div>

              <div 
                class="tab-pane fade" 
                id="deadlines-panel" 
                role="tabpanel">
                <div id="deadlinesList" style="max-height: 500px; overflow-y: auto;">
                  <div class="text-center py-3">
                    <div class="spinner-border spinner-border-sm me-2"></div>
                    Loading deadlines...
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- ========================================== -->
